
/* 根据分类展示花列表 */
.classfication{
  display: flex;
}

/* 左边标题导航 */
.scrollAreaLeft{
  flex: 1.3;
  height: 1100rpx;
  background-color: #eee;
}
.typeTitle{
  height: 90rpx;
  line-height: 90rpx;
  color: #333333;
}
.selectedTitle{
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  color: #ffcc99;  
  border-left:8rpx solid  #FFCC99;
}
.content{
  margin-left: 20rpx;
}
/* 右边相关内容显示 */
.scrollAreaRight{
  flex:4;
}
.classifySlideRight{
  width: 100%;
  display: flex;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 10rpx;
}
.left{
  flex:1;
}
.flowerImg{
  width: 180rpx;
  height: 180rpx;
  margin-left: 10rpx;
}
.right{
  flex:4;
  margin-left: 10rpx;
  width: 180rpx;
  height: 180rpx;
 
}
.title{
  color: #333333;
  font-size: 30rpx;
  margin-bottom: 50rpx;
}
.price{
  color:#FFCC99;
  font-size: 26rpx;
}
.sales{
  display: flex;
  justify-content: space-between;
}
.amount{
  color: #BBBBBB;
  font-size: 26rpx;
}
